<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">21dp</item>
        <item name="android:maxHeight">21dp</item>
    </style>

    <!--标题文字-->
    <style name="text_tag">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/text_tag_gray</item>
    </style>

    <!--标题文字 小号-->
    <style name="text_tag_small">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/text_tag_gray</item>
    </style>

    <!--标题文字 小号-->
    <style name="text_tag_big">
        <item name="android:textSize">@dimen/text_17.5sp</item>
        <item name="android:textColor">@color/text_tag_gray</item>
    </style>

    <!--描述文字-->
    <style name="text_description">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>

    <!--描述文字 小号-->
    <style name="text_description_small">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <!--标题文字-->
    <style name="text_title_w">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>

    <!-- cardView -->
    <style name="card_view">
        <item name="android:layout_marginLeft">@dimen/marginleft_14</item>
        <item name="android:layout_marginRight">@dimen/marginleft_14</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
    </style>





    <!--施工日志-->
    <style name="text_40">
        <item name="android:textColor">@color/text_tag_gray</item>
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>

    <!--popunwindow anim-->
    <style name="AnimDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_out</item>
    </style>

    <!--popunwindow anim-->
    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/up_scale_in</item>
        <item name="android:windowExitAnimation">@anim/up_scale_out</item>
    </style>

    <style name="AnimBottem" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <!--备注框-->
    <style name="et_remark">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:gravity">left|top</item>
        <item name="android:hint">@string/et_hint_remark</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_tag_gray</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--toolbar-->
    <style name="GeryToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

</resources>
