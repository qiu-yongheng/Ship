<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">21dp</item>
        <item name="android:maxHeight">21dp</item>
    </style>

    <!--标题文字-->
    <style name="text_tag">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/text_tag_gray</item>
    </style>

    <!--描述文字-->
    <style name="text_description">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>

</resources>
