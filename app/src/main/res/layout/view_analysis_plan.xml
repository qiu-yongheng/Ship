<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_show"/>

                <TextView
                    style="@style/text_tag_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="供砂计划阶段"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/view_divi"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="供应商信息"/>

                    <TextView
                        android:id="@+id/tv_sub_name"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="供砂船舶"/>

                    <TextView
                        android:id="@+id/tv_ship_name"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="船舶类型"/>

                    <TextView
                        android:id="@+id/tv_ship_type"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计划日期"/>

                    <TextView
                        android:id="@+id/tv_plan_time"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重量(顿)"/>

                    <TextView
                        android:id="@+id/tv_weight"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最大吃水"/>

                    <TextView
                        android:id="@+id/tv_water"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MMSI"/>

                    <TextView
                        android:id="@+id/tv_mmsi"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_tag_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="供砂量"/>

                    <TextView
                        android:id="@+id/tv_sand_count"
                        style="@style/text_description_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>