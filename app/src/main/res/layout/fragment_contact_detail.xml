<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/view_toolbar"/>

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="180dp">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@mipmap/icon_head"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_user_account"
                    style="@style/text_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_divi"/>

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/text_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_sex"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_go"/>
            </LinearLayout>


        </RelativeLayout>

        <include layout="@layout/view_divi"/>

        <RelativeLayout
            android:id="@+id/rl_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/text_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_section"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_section"
                    style="@style/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_go"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_divi"/>

        <RelativeLayout
            android:id="@+id/rl_duties"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/text_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_duties"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_duties"
                    style="@style/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_go"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_divi"/>

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/text_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_phone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_go"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_divi"/>

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/text_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_email"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_go"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_divi"/>

        <RelativeLayout
            android:id="@+id/rl_tell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/text_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_tell"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tell"
                    style="@style/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_go"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_divi"/>

    </LinearLayout>
</RelativeLayout>