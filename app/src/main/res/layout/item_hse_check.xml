<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingtop_18dp"
        android:layout_marginRight="@dimen/paddingtop_18dp"
        android:layout_marginTop="@dimen/margintop_8dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_circle"/>

                <TextView
                    android:id="@+id/tv_ship_name"
                    style="@style/text_tag_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginleft_11"/>
            </LinearLayout>

            <include layout="@layout/view_divi"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_32"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_tag_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检  查  人"/>

                <TextView
                    android:id="@+id/tv_checker"
                    style="@style/text_description_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_32"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_tag_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查日期"/>

                <TextView
                    android:id="@+id/tv_check_time"
                    style="@style/text_description_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_32"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_tag_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="受检船舶"/>

                <TextView
                    android:id="@+id/tv_check_ship"
                    style="@style/text_description_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_32"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_tag_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备          注"/>

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/text_description_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <include layout="@layout/view_divi"/>
            <LinearLayout
                android:paddingBottom="2dp"
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/item_height_32"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_update"
                    android:background="@color/text_white"
                    style="@style/text_tag"
                    android:text="修改记录"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <include layout="@layout/view_divi_v"/>
                <Button
                    android:visibility="visible"
                    android:id="@+id/btn_delete"
                    android:background="@color/text_white"
                    style="@style/text_tag"
                    android:text="删除记录"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <include layout="@layout/view_divi_v"/>
                <Button
                    android:visibility="visible"
                    android:id="@+id/btn_add_defect"
                    android:background="@color/text_white"
                    style="@style/text_tag"
                    android:text="填写缺陷"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>